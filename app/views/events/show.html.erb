<div class="container">
  <div class="row justify-content-center">
	<div class="text-center my-5">
		<h1><%= @event.title %></h1>
		<h6><%= @event.start_date.strftime("%d.%m.%Y") %> | <%= @event.location %> | <%= @event.price %> €</h6>
		<p><%= @event.description %></p>
		<hr>
		<div class="my-4">
			<h6>Liste d'invités</h6>
		<table class="table table-hover text-center table-bordered">
			<thead>
				<tr>
					<th>Prénom</th>
					<th>Nom</th>
				</tr>
			</thead>
			<% @event.users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
			</tr>
			<% end %>
		</table>
		</div>
		<div class="my-4">
		<p><%= link_to "Voir tous les événements", root_path %></p>
		</div>
	</div>
  </div>
</div>