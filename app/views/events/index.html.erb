<div class="text-center mt-5 mb-4">
<h1 >Event Sprite</h1>
</div>
<div class="d-flex justify-content-center">
  <button type="button" class="btn btn-primary"><%= link_to "Ajouter un événement", new_event_path, :class => 'text-white text-decoration-none' %></button>
</div>

<div class="row mt-4">
  <% @events.each do |event| %>
    <div class="col-sm-3 my-3 ">
      <%= link_to event_path(event.id), :style => 'text-decoration:none', :action => 'go' do %>
        <div class="card bg-light shadow-sm">
          <div class="card-header">
            <span class="text-dark">Evénément n°<%= event.id %> : <%= event.title %></span>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p class="text-body"><%= event.description %></p>
            </blockquote>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>