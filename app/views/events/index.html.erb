<div class="text-center mt-5 mb-4">
<h1 >Event Sprite</h1>
</div>
<div class="d-flex justify-content-center">
  <button type="button" class="btn btn-primary"><%= link_to "Ajouter un événement", new_event_path, :class => 'text-white text-decoration-none' %></button>
</div>

<div class="row mt-4">
  <% @events.each do |event| %>
    <div class="col-sm-6 my-3">
      <%= link_to event_path(event.id), :class => 'text-dark text-decoration-none', :action => 'go' do %>
      <div class="card text-center shadow">
        <div class="card-header">
          <%= event.start_date.strftime("%d " "%b") %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text"><%= event.description %></p>
        </div>
        <div class="card-footer text-muted">
          <%= event.location %>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>